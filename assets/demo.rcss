body {
    width: 100%;
    height: 100%;
    font-family: LatoLatin;
    font-size: 16px;
    color: #333;
}

h1 {
    font-size: 24px;
    color: #333;
    margin: 10px;
    font-weight: bold;
}

p {
    margin: 10px;
    line-height: 1.4;
}

button {
    display: block;
    margin: 10px;
    padding: 5px 10px;
    background: #446;
    color: white;
    border-radius: 3px;
    cursor: pointer;
}

.container {
    padding: 15px;
}